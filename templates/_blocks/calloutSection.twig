{% import "/_macros" as macros %}

{% set background = null %}
{% if block['background'] is defined and block.background|length %}
    {% set background = block.background.value %}
{% endif %}

 <div class="callout" {{ block.anchor ? 'id="#' ~ block.anchor ~ "'" : ''}}>
    <div class="grid -columns-12">
        {# {% if block.eyebrow %}
            <h2 class="h6 accent-primary cell -span-6 -center">{{ block.eyebrow }}</h2>
        {% endif %} #}
        <div class="callout__title cell -span-6 -left">
            <h3>{{ block.headline }}</h3>
        </div>
        {# {% if block.blockContentNoMedia|length %}
            <div class="callout__content cell -span-6 -center">
                {{ block.blockContentNoMedia }}
            </div>
        {% endif %} #}
        <div class="callout__actions cell -span-6 -right">
            {{ macros.renderLink (block.ctaLink, { class: 'button' })}}
        </div>
    </div>
</div>